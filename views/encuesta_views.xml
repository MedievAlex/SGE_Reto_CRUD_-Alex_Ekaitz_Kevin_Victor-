<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="encuesta_view_tree" model="ir.ui.view">
            <field name="name">encuesta.tree</field>
            <field name="model">aplicacion_incidencias.encuesta</field>
            <field name="arch" type="xml">
                <tree string="Encuestas de Satisfacción"
                      decoration-danger="puntuacion &lt; '2'"
                      decoration-success="puntuacion &gt;= '4'"
                      decoration-warning="puntuacion &gt;= '2' and puntuacion &lt; '4'">
                    <field name="puntuacion" widget="priority" readonly="True" width="15%"/>
                    <field name="comentario" width="auto"/>
                    <field name="x_incidencia_id" width="25%"/>
                    <field name="fecha_respuesta" widget="date" width="10%"/>
                </tree>
            </field>
        </record>

        <record id="encuesta_view_form" model="ir.ui.view">
            <field name="name">encuesta.form</field>
            <field name="model">aplicacion_incidencias.encuesta</field>
            <field name="arch" type="xml">
                <form string="Encuesta">
                    <sheet>
                        <group>
                            <group string="Calificación">
                                <field name="puntuacion" widget="priority"/>
                            </group>

                            <group string="Información General">
                                <field name="fecha_respuesta" widget="date"/>
                                <field name="x_incidencia_id"/>
                            </group>
                        </group>

                        <separator string="Comentarios"/>

                        <group>
                            <field name="comentario" nolabel="1"
                                   placeholder="Escribe aquí..."
                                   style="height: 100px; width: 400px;"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="encuesta_view_kanban" model="ir.ui.view">
            <field name="name">encuesta.kanban</field>
            <field name="model">aplicacion_incidencias.encuesta</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_record_body">
                                    <field name="puntuacion" widget="priority" readonly="True"/>
                                    <div><field name="comentario"/></div>
                                    <div><strong><field name="x_incidencia_id"/></strong></div>
                                    <div><small><field name="fecha_respuesta"/></small></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
    </data>
</odoo>